<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox fx:controller="com.sawickimike.budgetmanagerapp.ui.BudgetManagerController" prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <MenuBar VBox.vgrow="NEVER">
            <menus>
                <Menu mnemonicParsing="false" text="Income">
                    <items>
                        <MenuItem fx:id="newIncomeMenuItem" mnemonicParsing="false" onAction="#handleNewIncome" text="New" />
                        <MenuItem fx:id="showAllIncomeMenuItem" mnemonicParsing="false" onAction="#handleShowAllIncome" text="Show All" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Expense">
                    <items>
                        <MenuItem fx:id="newExpenseMenuItem" mnemonicParsing="false" onAction="#handleNewExpense" text="New" />
                        <MenuItem fx:id="showAllExpenseMenuItem" mnemonicParsing="false" onAction="#handleShowAllExpense" text="Show All" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit Input">
                    <items>
                        <MenuItem fx:id="showAllInputsMenuItem" mnemonicParsing="false" onAction="#handleShowAllInputs" text="Show Inputs" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Saving Goal">
                    <items>
                        <MenuItem fx:id="aboutMyHelloAppMenuItem" mnemonicParsing="false" onAction="#handleAboutMyHelloApp" text="About MyHelloApp" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem fx:id="aboutBudgetManagerAppMenuItem" mnemonicParsing="false" onAction="#handleAboutBudgetManagerApp" text="About BudgetManagerApp" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="404.0" prefWidth="678.0" VBox.vgrow="ALWAYS" />
    </children>
</VBox>
